html, body {
  height: 100%;
  overflow: hidden;
}

.content-container {
  height: calc(100% - 56px); // size of top menu
  overflow-y: auto;
  overflow-x: hidden;
}

.dataTables_wrapper {
  padding: 0.5rem;
}

.cy {
  overflow: hidden;
  height: 100%;
}

.settings-row {
  margin-bottom: 0.375rem;
}

/* Loader */
.loader {
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  position: absolute;

  border: 16px solid #f3f3f3;
  border-radius: 50%;
  border-top: 16px solid #555555;
  width: 100px;
  height: 100px;
  -webkit-animation: spin 2s linear infinite;
  animation: spin 2s linear infinite;
  z-index: 2;
}

.overlay {
  position: fixed;
  /*display: none;*/
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(250, 250, 250, .8);
  z-index: 1;
}

@-webkit-keyframes spin {
  0% {
    -webkit-transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@-webkit-keyframes spin {
  0% {
    -webkit-transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

// Graph
// Panzoom
.cy-panzoom {
  right 3.75rem !important;
  bottom: 14.5rem !important;
}

// Tooltip
.cy-tooltip {
  position: absolute;
  left: 1rem;
  bottom: 1rem;
  max-width: 25% !important;
  width: 25%;
  margin: 0 !important;
}

//timeline
.timeline-graph-outer {
  position: absolute;
  left: 50%;
  width: 45%;
  bottom: 1rem;
}

.timeline-graph-inner {
  position: relative;
  left: -50%;

  background-color white;
}

/* Plot styles */

.vis-graph-result {
  stroke-width: 1;
  stroke: black;
  fill: none;
}

.vis-graph-inconclusive {
  stroke-width: 0;
  fill: silver;
  fill-opacity: 0.5;
}

.vis-graph-success {
  stroke-width: 0;
  fill: green;
  fill-opacity: 0.5;
}

.vis-graph-fail {
  stroke-width: 0;
  fill: red;
  fill-opacity: 0.5;
}

.legend-container {
  margin: 0;
}

.legend-toggle-container {
  display: -webkit-flex; /* Safari */
  -webkit-align-items: center; /* Safari 7.0+ */
  display: flex;
  padding: 15px 0 0;
}

.vis-fill {
  fill-opacity: 0.1;
  stroke: none;
}

.vis-bar {
  fill-opacity: 0.5;
  stroke-width: 1px;
}

.vis-point {
  stroke-width: 2px;
  fill-opacity: 1.0;
}

.vis-legend-background {
  stroke-width: 1px;
  fill-opacity: 0.9;
  fill: #ffffff;
  stroke: #c2c2c2;
}

.vis-outline {
  stroke-width: 1px;
  fill-opacity: 1;
  fill: #ffffff;
  stroke: #e5e5e5;
}

.vis-icon-fill {
  fill-opacity: 0.3;
  stroke: none;
}

svg.legend-icon {
  margin-left: 8px;
  margin-right: 8px;
  width: 30px;
  height: 30px;
}

// Nav
.disabled {
  cursor: not-allowed;
  pointer-events: none;
}


